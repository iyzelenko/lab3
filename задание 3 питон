def series_sum():
    sum = 0
    k = 1
    while True:
        term = (20 / 2**(k-1)) + ((-1)**(k-1) / (2 * 3**(k-1)))
        if abs(term) < 1e-6:
            break
        sum += term
        k += 1
    return sum

result = series_sum()
print("Сумма числового ряда с точностью до 10^(-6):", result)
